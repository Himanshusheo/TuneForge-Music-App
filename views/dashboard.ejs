<script>
document.addEventListener('DOMContentLoaded', function() {
    loadDashboardData();
    loadUserStats();
    loadRecentActivity();
});

async function loadDashboardData() {
    try {
        // Load recently played songs
        const recentResponse = await fetch('/api/user/history?limit=6');
        if (recentResponse.ok) {
            const recentData = await recentResponse.json();
            if (recentData.success && recentData.data.length > 0) {
                displayRecentlyPlayed(recentData.data);
            }
        }
        
        // Load user playlists
        const playlistsResponse = await fetch('/api/playlists');
        if (playlistsResponse.ok) {
            const playlistsData = await playlistsResponse.json();
            if (playlistsData.success && playlistsData.data.length > 0) {
                displayUserPlaylists(playlistsData.data);
            }
        }
        
        // Load recommended songs
        const recommendedResponse = await fetch('/api/songs/featured?limit=6');
        if (recommendedResponse.ok) {
            const recommendedData = await recommendedResponse.json();
            if (recommendedData.success && recommendedData.data.length > 0) {
                displayRecommendedSongs(recommendedData.data);
            }
        }
    } catch (error) {
        console.error('Error loading dashboard data:', error);
    }
}

function displayRecentlyPlayed(songs) {
    const container = document.getElementById('recentlyPlayed');
    if (!container) return;
    
    container.innerHTML = '';
    
    songs.forEach(song => {
        const songCard = createSongCard(song);
        container.appendChild(songCard);
    });
}

function displayUserPlaylists(playlists) {
    const container = document.getElementById('userPlaylists');
    if (!container) return;
    
    container.innerHTML = '';
    
    playlists.slice(0, 4).forEach(playlist => {
        const playlistCard = createPlaylistCard(playlist);
        container.appendChild(playlistCard);
    });
}

function displayRecommendedSongs(songs) {
    const container = document.getElementById('recommendedSongs');
    if (!container) return;
    
    container.innerHTML = '';
    
    songs.forEach(song => {
        const songCard = createSongCard(song);
        container.appendChild(songCard);
    });
}

function createSongCard(song) {
    const card = document.createElement('div');
    card.className = 'song-card';
    card.innerHTML = `
        <div class="song-cover">
            <img src="${song.coverArt || '/images/default-album-cover.png'}" alt="${song.title}">
            <div class="play-overlay">
                <button class="play-btn" data-song-id="${song._id}">
                    <i class="fas fa-play"></i>
                </button>
            </div>
        </div>
        <div class="song-info">
            <h4 class="song-title">${song.title}</h4>
            <p class="song-artist">${song.artist}</p>
        </div>
    `;
    
    // Add click handler
    const playBtn = card.querySelector('.play-btn');
    playBtn.addEventListener('click', () => {
        if (window.TuneForge && window.TuneForge.playSong) {
            window.TuneForge.playSong(song._id);
        }
    });
    
    return card;
}

function createPlaylistCard(playlist) {
    const card = document.createElement('div');
    card.className = 'playlist-card';
    card.innerHTML = `
        <div class="playlist-cover">
            <i class="fas fa-music"></i>
        </div>
        <div class="playlist-info">
            <h4 class="playlist-name">${playlist.name}</h4>
            <p class="playlist-meta">${playlist.songCount || 0} songs</p>
        </div>
    `;
    
    card.addEventListener('click', () => {
        window.location.href = `/playlists/${playlist._id}`;
    });
    
    return card;
}

async function loadUserStats() {
    try {
        const response = await fetch('/api/user/profile');
        if (response.ok) {
            const data = await response.json();
            if (data.success) {
                const user = data.data;
                
                // Update stats (these would come from actual user data)
                const stats = {
                    songsPlayed: user.listeningHistory ? user.listeningHistory.length : 0,
                    playlistsCreated: user.playlists ? user.playlists.length : 0,
                    songsLiked: user.favoriteSongs ? user.favoriteSongs.length : 0,
                    listeningTime: calculateListeningTime(user.listeningHistory || [])
                };
                
                updateStatsDisplay(stats);
            }
        }
    } catch (error) {
        console.error('Error loading user stats:', error);
    }
}

function updateStatsDisplay(stats) {
    const statNumbers = document.querySelectorAll('.stat-number');
    if (statNumbers.length >= 4) {
        statNumbers[0].textContent = stats.songsPlayed;
        statNumbers[1].textContent = stats.playlistsCreated;
        statNumbers[2].textContent = stats.songsLiked;
        statNumbers[3].textContent = stats.listeningTime;
    }
}

function calculateListeningTime(history) {
    const totalSeconds = history.reduce((total, item) => {
        return total + (item.duration || 0);
    }, 0);
    
    const hours = Math.floor(totalSeconds / 3600);
    return hours > 0 ? `${hours}h` : `${Math.floor(totalSeconds / 60)}m`;
}

